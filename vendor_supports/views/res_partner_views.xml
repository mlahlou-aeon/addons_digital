<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Smart button and tab on supplier form -->
    <record id="view_partner_form_vendor_support_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.vendor.support.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_view_vendor_supports" type="object" class="oe_stat_button" icon="fa-external-link">
                    <span class="o_stat_value">
                        <field name="support_count" widget="statinfo"/>
                    </span>
                </button>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Supports">
                    <field name="support_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="category_id"/>
                            <field name="commission_pct"/>
                            <field name="minimum_buy_amount"/>
                            <field name="blacklisted"/>
                        </list>
                        <form>
                            <sheet>
                                <group>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="commission_pct"/>
                                    <field name="minimum_buy_amount"/>
                                    <field name="blacklisted"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
