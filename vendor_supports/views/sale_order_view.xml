<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add Support on SO lines (tree + form) -->
    <record id="view_order_form_inherit_support" model="ir.ui.view">
        <field name="name">sale.order.form.support.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        
            <xpath expr="//sheet/div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_open_purchase_order" type="object" icon="fa-credit-card">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value" align="center">
                            <field name="purchase_order_count"/>
                        </span>
                        <span class="o_stat_text">Achat</span>
                    </div>
                </button>
            </xpath>

            <!-- 1) Cacher le bouton "action_confirm" d'origine quand un niveau d'approbation est requis -->
            <xpath expr="//header/button[@name='action_confirm'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header/button[@id='action_confirm']" position="attributes">
                <attribute name="invisible">state in ('draft','min_buy','sent','sale')</attribute>
            </xpath>

            <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                    statusbar_visible="draft,to_validate,to_confirm,sale"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <!-- Soumettre au circuit d'approbation -->
                <button name="action_request_approval" string="Soumettre à validation"
                        type="object" class="btn-secondary"
                        invisible= "state not in ('draft','sent') or approval_required_level == 'none'" />

                <!-- Approuver N+2 (ne s'affiche que si N+2 est requis) -->
                <button name="action_approve" string="Approuver"
                        type="object" class="btn-primary"
                        groups="vendor_supports.group_quote_approve_n2"
                        invisible="state in ('draft','min_buy','sent','to_confirm','sale')"/>
                <button name="action_request_approval"
                        string="Soumettre"
                        type="object" class="oe_highlight"
                        invisible="state!= 'min_buy'"
                        groups="vendor_supports.group_min_buy_approver"/>
            </xpath>

            <xpath expr="//button[@name='action_view_purchase_orders']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="start_date" widget="daterange" options='{"end_date_field": "end_date", "always_range": "1"}'/>
                <field name="approval_required_level" invisible="1" />
            </xpath>

        <!-- Column in the order lines tree, after product -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="support_id"
                    invisible="not has_available_supports"
                    domain="[('id','in', available_support_ids)]"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='qty_delivered']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='qty_invoiced']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="attributes">
                <attribute name="string">Prix de vente</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="before">
                <field name="public_price" readonly="1"/>
                <field name="purchase_price" string="Prix d’achat" />
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="commission_pct" />
            </xpath>
            
 
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field name="support_id"
                    invisible="not has_available_supports"
                    domain="[('id','in', available_support_ids)]"/>
            </xpath>

        </field>
    </record>
</odoo>
