<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add support on Supplierinfo (Vendor Pricelist) -->
    <record id="product_supplierinfo_form_inherit_vendor_support" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.vendor.support.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="inside">
                <field string="support" name="support_id" placeholder="Select a support linked to this vendor"/>
            </xpath>
        </field>
    </record>

    <record id="product_supplierinfo_tree_inherit_vendor_support" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.vendor.support.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field string="Support" name="support_id" optional="show"/>
            </xpath>
            <xpath expr="//list/field[@name='min_qty']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//list/field[@name='price']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//list/field[@name='delay']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>
            <xpath expr="//list/field[@name='currency_id']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
