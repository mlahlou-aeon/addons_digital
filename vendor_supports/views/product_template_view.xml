<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_list_inherit" model="ir.ui.view">
        <field name="name">product.template.list.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="replace">
                <list string="Produits" multi_edit="1" sample="1">
                    <header>
                        <button string="Imprimer les étiquettes" type="object" name="action_open_label_layout"/>
                    </header>
                    <field name="name"/>
                    <field name="product_kind" optional="show"/>
                    <field name="categ_id" optional="show"/>
                    <field name="sub_category" optional="show"/>  
                    <field name="uom_id"/>
                    <field name="public_price"/>
                    <field name="standard_price" string="Prix d'achat"/>
                    <field name="margin_pct" string="Commission(%)"/>
                </list>
            </xpath>
        </field>
    </record>
    <record id="view_product_template_form_inherit_catalog" model="ir.ui.view">
        <field name="name">product.template.form.catalog.enrichment</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[@name='internal_notes']" position="before">
                <group>
                    <group string="Paramètres">
                        <field name="display_scope"/>
                        <field name="ras"/>
                    </group>
                    <group string="Période de validité">
                        <field name="valid_from"/>
                        <field name="valid_to"/>
                    </group>
                </group> 
            </xpath>
            
            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='product_tooltip']" position="after">
                <field name="product_kind"/>
                <field name="categ_id" domain="[('parent_id', '=', False)]"/>
                <field name="sub_category" domain="[('parent_id', '=', categ_id)]" context="{'default_parent_id': categ_id, 'hierarchical_naming': False}"/> 
                <field name="support_id" invisible="1" /> 
            </xpath>

            <xpath expr="//div[@name='list_price_uom']" position="after">
                <field name="uom_id" string="Unité" options="{'no_create': True}"/>
                <field name="public_price" nolabel="0"/>
            </xpath>
            <xpath expr="//field[@name='supplier_taxes_id']" position="after">
                <field name="margin_pct" readonly="1" nolabel="0" invisible="product_kind != 'external'"/>
            </xpath>
            
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="readonly">support_id != False</attribute>
                <attribute name="string">Prix d'achat</attribute>
            </xpath>

            <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                <attribute name="invisible">product_kind != 'external'</attribute>
            </xpath>

            <xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="invisible">product_kind != 'external'</attribute>
            </xpath>

            <xpath expr="//field[@name='supplier_taxes_id']" position="attributes">
                <attribute name="invisible">product_kind != 'external'</attribute>
            </xpath>

            <xpath expr="//label[@for='list_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//div[@name='list_price_uom']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
</odoo>
