<odoo>
  <record id="view_sale_min_buy_wizard_form" model="ir.ui.view">
    <field name="name">sale.min.buy.wizard.form</field>
    <field name="model">sale.min.buy.wizard</field>
    <field name="arch" type="xml">
      <form string="Validation Min Buy">
        <group>
            <field name="sale_id" invisible="1"/>
            <field name="errors_text" nolabel="1" readonly="1"/>
            <separator string="Souhaitez-vous demander une validation ?"/>
            <field name="reason" placeholder="Motif"/>
        </group>
        <footer>
          <button name="action_request_validation" type="object"
                string="Demander la validation" class="btn-primary"/>
          <button name="action_cancel" type="object"
                string="Annuler" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
